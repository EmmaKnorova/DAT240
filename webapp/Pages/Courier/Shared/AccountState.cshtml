@page
@model AccountStateModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Account State</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <div class="card shadow-sm border-0">
                    <div class="card-body text-center p-4">

                        <h3 class="mb-3">Account Status</h3>

                        <p class="fw-bold mb-1">User: @User.Identity?.Name</p>
                        <p class="text-muted mb-4">Role: Courier</p>

                        <div class="alert alert-warning">
                            <strong>Your account state is: @Model.UserAccountState.</strong><br />
                            An administrator must approve your courier account before you can access the courier dashboard.
                        </div>

                        <p class="text-muted">
                            Once approved, you will be able to log in normally.
                        </p>

                        <form method="post" asp-area="" asp-page="/Identity/Logout">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>