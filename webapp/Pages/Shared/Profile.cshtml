@page
@model TarlBreuJacoBaraKnor.webapp.Pages.Shared.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

@if (Model.CurrentUser == null)
{
    <div class="alert alert-danger">
        Profile not found.
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Model.CurrentUser.Email</dd>

                <dt class="col-sm-3 fw-bold">Username</dt>
                <dd class="col-sm-9">@Model.CurrentUser.UserName</dd>

                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Model.CurrentUser.Name</dd>

                <dt class="col-sm-3 fw-bold">Phone number</dt>
                <dd class="col-sm-9">@Model.CurrentUser.PhoneNumber</dd>

                <dt class="col-sm-3 fw-bold">Address</dt>
                <dd class="col-sm-9">@Model.CurrentUser.Address</dd>

                <dt class="col-sm-3 fw-bold">City</dt>
                <dd class="col-sm-9">@Model.CurrentUser.City</dd>

                <dt class="col-sm-3 fw-bold">Postal Code</dt>
                <dd class="col-sm-9">@Model.CurrentUser.PostalCode</dd>

            </dl>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a href="/Shared/EditProfile" class="btn btn-primary btn-lg">
            <i class="bi bi-pencil-square"></i> Edit Profile
        </a>
    </div>
}
