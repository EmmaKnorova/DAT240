@page
@model IndexModel

@{
    Layout = "/Pages/Admin/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Products";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Products</h2>

    @if (!Model.Products.Any())
    {
        <p class="text-muted">No products found.</p>
    }
    else
    {
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th class="text-end">Price</th>
                    <th class="text-center">Cook time (min)</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td style="width: 80px;">
                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                        {
                            <img src="@Url.Content("~/" + item.ImagePath.TrimStart('/', '\\'))"
                                alt="@item.Name"
                                class="img-thumbnail"
                                style="max-height: 60px;" />
                        }
                        else
                        {
                            <span class="text-muted">No image</span>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td class="text-end">@item.Price.ToString("C")</td>
                    <td class="text-center">@item.CookTime</td>
                    <td class="text-end">
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                            Edit
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>