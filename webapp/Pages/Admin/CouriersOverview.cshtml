@page
@model CouriersOverviewModel

@{
    Layout = "/Pages/Admin/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Couriers Overview";
}

<div class="container mt-5">
    <div class="d-flex flex-column align-items-center">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Pending Couriers</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var courier in Model.PendingCouriers) 
                            {
                            <tr>
                                <td>@courier.Name</td>
                                <td>@courier.Email</td>
                                <td>
                                    <button class="btn btn-success btn-sm">Approve</button>
                                    <button class="btn btn-danger btn-sm">Decline</button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Approved Users</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var courier in Model.ApprovedCouriers) 
                            {
                            <tr>
                                <td>@courier.Name</td>
                                <td>@courier.Email</td>
                                <td>
                                    <button class="btn btn-danger btn-sm">Decline</button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Declined Users</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var courier in Model.DeclinedCouriers) 
                            {
                            <tr>
                                <td>@courier.Name</td>
                                <td>@courier.Email</td>
                                <td>
                                    <button class="btn btn-success btn-sm">Approve</button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
