@page
@model AdminChangeDefaultPasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TarlBreuJacoBaraKnor.styles.css" asp-append-version="true" />
    <title>@ViewData["Title"] - Campus Eats</title>
</head>

<body>
    <section class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="containd-flex justify-content-center align-items-center min-vh-100-width: 500px;">
            <div class="text-center mb-4">
                <h1 class="fw-bold">
                    <span class="text-primary" shadow-lgsword</span>
                </h1>
                <p class="text-muted">Update your account password below.</text-primaryv>

                <div class="card shadow-lg">
                    <div class="card-body p-4">
                        <form method="post" class="needs-validation" novalidate>
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label"></label>
                                <input type="password" asp-for="Input.Password" class="form-control" autocomplete="new-password" required />
                                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Input.PasswordConfirmation" class="form-label"></label>
                                <input type="password" asp-for="Input.PasswordConfirmation" class="form-control" autocomplete="new-password" required />
                                <span asp-validation-for="Input.PasswordConfirmation" class="text-danger small"></span>

                                <!-- client-side feedback shown by Bootstrap when invalid -->
                                <div class="invalid-feedback">
                                    Passwords must match.
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    Update Password
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.querySelector('form.needs-validation');
            if (!form) return;

            var pw = form.querySelector('input[name="Input.Password"]');
            var pwConfirm = form.querySelector('input[name="Input.PasswordConfirmation"]');
            if (!pw || !pwConfirm) return;

            function validatePasswords() {
                if (pw.value === '' || pwConfirm.value === '') {
                    pwConfirm.setCustomValidity('');
                    return;
                }

                if (pw.value !== pwConfirm.value) {
                    pwConfirm.setCustomValidity('Passwords do not match');
                } else {
                    pwConfirm.setCustomValidity('');
                }
            }

            pw.addEventListener('input', validatePasswords);
            pwConfirm.addEventListener('input', validatePasswords);

            form.addEventListener('submit', function (e) {
                validatePasswords();

                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    form.classList.add('was-validated');
                }
            }, false);
        });
        </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
</body>

</html>