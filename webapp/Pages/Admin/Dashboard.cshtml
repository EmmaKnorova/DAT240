@page
@model AdminDashboardModel
@{
    Layout = "/Pages/Admin/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Admin Dashboard</h2>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Orders this month</h5>
                    <p class="card-text display-6">@Model.TotalOrdersThisMonth</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Revenue this month</h5>
                    <p class="card-text display-6">
                        @Model.TotalRevenueThisMonth.ToString("C")
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card text-white bg-secondary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Unique statuses this month</h5>
                    <p class="card-text display-6">
                        @Model.OrdersByStatusThisMonth.Count
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders by status -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Orders by status (current month)</h5>
                </div>
                <div class="card-body">
                    @if (!Model.OrdersByStatusThisMonth.Any())
                    {
                        <p class="text-muted mb-0">No orders for the current month.</p>
                    }
                    else
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var s in Model.OrdersByStatusThisMonth)
                            {
                                <tr>
                                    <td>@s.Status</td>
                                    <td class="text-end">@s.Count</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
