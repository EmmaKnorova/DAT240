@page
@model TarlBreuJacoBaraKnor.webapp.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <h1 class="display-4 text-center mt-5 mb-4">Menu</h1>

    <form method="post">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model.FoodItems)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/food_item_placeholder.jpg" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@item.Name</h5>
                                <span class="badge bg-primary fs-6">Kr @string.Format("{0:#0.00}", item.Price)</span>
                            </div>
                            <p class="card-text text-muted flex-grow-1">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @item.CookTime min
                                </small>
                                <button type="submit" 
                                        class="btn btn-primary btn-sm"
                                        asp-page-handler="AddToCart"
                                        asp-route-id="@item.Id"
                                        asp-route-name="@item.Name"
                                        asp-route-price="@item.Price.ToString("0.00")">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        
        .card-title {
            color: #333;
            font-weight: 600;
        }
        
        .badge {
            font-weight: 500;
        }
    </style>
}