@page
@model TarlBreuJacoBaraKnor.webapp.Pages.Customer.Cart.CartCheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h1 class="display-4">Checkout</h1>
    
    @if (Model.Errors.Any())
    {
        <div class="alert alert-danger">
            @foreach (var error in Model.Errors)
            {
                <div>@error</div>
            }
        </div>
    }

    <form method="post" class="mt-4">
        <div class="row">
            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="Building" class="form-label">Building</label>
                    <input asp-for="Building" class="form-control" required />
                    <span asp-validation-for="Building" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RoomNumber" class="form-label">Room Number</label>
                    <input asp-for="RoomNumber" class="form-control" required />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Delivery Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional delivery instructions..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Place Order</button>
                    <a asp-page="/Customer/Cart/Cart" class="btn btn-secondary">Back to Cart</a>
                </div>
            </div>
        </div>
    </form>
</div>