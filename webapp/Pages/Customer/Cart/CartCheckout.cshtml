@page
@model TarlBreuJacoBaraKnor.webapp.Pages.Customer.Cart.CartCheckoutModel
@{
    Layout = "/Pages/Customer/Shared/_Customer_Layout.cshtml";
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    <h1 class="display-4">Checkout</h1>
    
    @if (Model.Errors.Any())
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Validation Error:</strong>
            <ul class="mb-0">
                @foreach (var error in Model.Errors)
                {
                    <li>@error</li>
                }
            </ul>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Please correct the following errors:</strong>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="mt-4">
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Delivery Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Building" class="form-label">Building <span class="text-danger">*</span></label>
                            <input asp-for="Building" class="form-control" placeholder="e.g., Main Building, Engineering Hall" />
                            <span asp-validation-for="Building" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomNumber" class="form-label">Room Number <span class="text-danger">*</span></label>
                            <input asp-for="RoomNumber" class="form-control" placeholder="e.g., A-123, B205" />
                            <span asp-validation-for="RoomNumber" class="text-danger small"></span>
                            <div class="form-text">Letters, numbers, hyphens, and periods only</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Delivery Notes (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="e.g., Ring doorbell twice, Leave at reception"></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                            <div class="form-text">Max 500 characters</div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-credit-card"></i> Proceed to Payment
                            </button>
                            <a asp-page="/Customer/Cart/Cart" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}