@page
@model TarlBreuJacoBaraKnor.webapp.Pages.PaymentCancelledModel
@{
    ViewData["Title"] = "Payment Cancelled";
}

<style>
    .cancel-container {
        text-align: center;
        margin-top: 100px;
        animation: fadeIn 1s ease-in-out;
    }

    .cancel-icon {
        font-size: 80px;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .cancel-message {
        font-size: 24px;
        font-weight: bold;
        color: #333;
    }

    .redirect-message {
        margin-top: 10px;
        font-size: 16px;
        color: #666;
    }

    .btn-back {
        margin-top: 30px;
        font-size: 16px;
        padding: 10px 20px;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="cancel-container">
    <div class="cancel-icon">ðŸ˜ž</div>
    <div class="cancel-message">Payment was cancelled</div>
